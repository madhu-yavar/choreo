# Example .env file for Gibberish Detector Service
# Copy this to .env and update values as needed

# Auth & CORS
GIBBERISH_API_KEYS=supersecret123,your_api_key_here
GIBBERISH_ADMIN_API_KEYS=adminsecret123,your_admin_key_here
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Detection settings
GIBBERISH_THRESHOLD=0.8              # Detection sensitivity (0.0-1.0)
GIBBERISH_MIN_LENGTH=10              # Minimum text length to analyze
GIBBERISH_ACTION_ON_FAIL=refrain     # Options: refrain, filter, mask, reask

# Model settings
MODEL_PATH=models/gibberish_model.pkl

# Return full details in response?
RETURN_GIBBERISH_DETAILS=1